set BugNumber OCC7166

# spine
polyline s1 0 0 20 0 0 -20

# profile
beziercurve bc1 5 5 5 0 5 -5 0 -5 -5 0 -5 5 0 5 5 0
mkedge e1 bc1
wire s2 e1

# 1 vertex
vertex v1 40 0 -20

# 2 vertex
vertex v2 40 0 20

mksweep s1

addsweep v1
addsweep s2
addsweep v2

buildsweep result


set square 892.672

set nb_v_good 2
set nb_e_good 3
set nb_w_good 1
set nb_f_good 1
set nb_sh_good 1
set nb_sol_good 0
set nb_compsol_good 0
set nb_compound_good 0
set nb_shape_good 8



set index [lsearch [whatis result] Closed]
if {$index == -1} {
  puts "Faulty ${BugNumber} : result is not Closed shape"
  
}

set 3dviewer 0

