puts "============"
puts "OCC23824"
puts "============"
puts ""
#######################################################################
# Bad results of sweep operation when a path curve has unpredictable torsion along its way.
#######################################################################

set BugNumber OCC23824

restore [locate_data_file bug23824_Case3_Path.brep] spine 
restore [locate_data_file bug23824_Case3_Profile.brep] profile 

wire profile profile
explode spine
wire spine spine_1

mksweep spine
setsweep -DT
addsweep profile
buildsweep result

set square 38663.7

set nb_v_good 2
set nb_e_good 3
set nb_w_good 1
set nb_f_good 1
set nb_sh_good 1
set nb_sol_good 0
set nb_compsol_good 0
set nb_compound_good 0
set nb_shape_good 8

set 2dviewer 1
