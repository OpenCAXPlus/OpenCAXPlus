puts "============"
puts "CR23407"
puts "============"
puts ""
#######################################################################
# Draw face outlines for XDE objects
#######################################################################
pload XDEDRAW

XNewDoc Doc1
ReadStep Doc1 [locate_data_file screw.step]
XShow Doc1 0:1:1:1
XShowFaceBoundary Doc1 0:1:1:1 1 255 0 0 10 1
vfit
vsetdispmode 1

set x_coord 178
set y_coord 36

checkcolor $x_coord $y_coord 1 0 0

if { $stat != 1 } {
   puts "Error : Boundary of face is not changed"
}

set x_coord 244
set y_coord 89

checkcolor $x_coord $y_coord 1 0 0

if { $stat != 01} {
   puts "Error : Boundary of face is not changed"
}

set only_screen 1


