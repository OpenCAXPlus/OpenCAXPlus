#指定编译器
CC = gcc
#指定编译参数
CFLAGS = -g

#指定头文件路径，此处用于指定非标准库的头文件路径
INC = -I/usr/local/lib/R/include

#指定要链接的动态库或静态库 -L是指定动态库路径，非标准的动态库需要此参数
LIBS =  -L/usr/local/lib/R/lib -lR -lRlapack -lRblas 

#把上面放一起
CXXFLAGS = ${CFLAGS} ${INC} ${LIBS}

#指定生成可执行文件名称
EXEC = spc

#指定由哪些文件来生成可执行文件
COBJS = spc.c

#make执行动作
all:
	$(CC) -o $(EXEC) $(COBJS) $(CXXFLAGS)

#make clean动作
clean:
	rm -rf ${OBJS}
